<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/style.css"/>
    <title>Dojo Survey</title>
</head>
<body>
    <div class="container">
        <h1>Dojo Survey</h1>
        <div class="survey">
            @model Survey
            <form asp-action="Create" asp-controller="Survey" method="post">
                <span asp-validation-for="Name"></span><br>
                <label>Your Name: </label>
                <input type="text" asp-for="Name"><br>
                <span asp-validation-for="Location"></span><br>
                <label>Dojo Location:</label>
                <select asp-for="Location">
                    <option value="Boise">Boise</option>
                    <option value="Seattle">Seattle</option>
                    <option value="Chicago">Chicago</option>
                    <option value="Dallas">Dallas</option>
                    <option value="San Jose">San Jose</option>
                </select><br>
                <span asp-validation-for="Language"></span><br>
                <label>Favorite Language:</label>
                <select asp-for="Language">
                    <option value="C#">C#</option>
                    <option value="Python">Python</option>
                    <option value="Mean">Mean</option>
                    <option value="Ruby">Ruby</option>
                </select><br>
                <span asp-validation-for="Comment"></span><br>
                <label>Comment(optional):</label><br>
                <textarea asp-for="Comment" rows="5" cols="40"></textarea><br>
                <button>Submit</button>
            </form>
        </div>
    </div>
</body>
</html>